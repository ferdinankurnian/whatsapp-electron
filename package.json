{
  "name": "whatsapp-electron",
  "version": "1.1.0",
  "main": "main.js",
  "description": "A Simple WhatsApp client using Electron",
  "author": "Ferdinan Iydheko",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --linux"
  },
  "build": {
    "appId": "com.iydheko.whatsappelectron",
    "productName": "WhatsApp",
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ],
      "icon": "assets/icon.png",
      "category": "Internet",
      "desktop": {
        "entry": {
          "Name": "WhatsApp",
          "GenericName": "Chat Application",
          "Comment": "A Simple WhatsApp Client",
          "StartupWMClass": "WhatsApp",
          "Keywords": "whatsapp;chat;wa;",
          "Terminal": false,
          "Categories": "Network;Chat;Internet",
          "Icon": "icon"
        }
      },
      "executableArgs": [
        "--enable-features=UseOzonePlatform",
        "--ozone-platform=wayland"
      ]
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron-builder": "^26.0.12",
    "electron": "^37.2.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {},
  "postinstall": "electron-builder install-app-deps"
}
