{
  "name": "whatsapp-electron",
  "version": "1.0.0",
  "main": "main.js",
  "description": "A Simple WhatsApp client using Electron",
  "author": "Ferdinan Iydheko",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . WhatsApp --platform=linux --arch=x64 --icon=assets/whatsapp.png --overwrite"
  },
  "build": {
    "appId": "com.iydheko.whatsappelectron",
    "productName": "WhatsApp",
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Internet",
      "desktop": {
        "entry": {
          "Name": "WhatsApp",
          "GenericName": "Chat Application",
          "Comment": "A Simple WhatsApp Client",
          "StartupWMClass": "WhatsApp",
          "Keywords": "whatsapp;chat;wa;",
          "Terminal": false,
          "Categories": "Network;Chat;Internet",
          "Icon": "whatsapp"
        }
      },
      "executableArgs": [
        "--enable-features=UseOzonePlatform",
        "--ozone-platform=wayland"
      ]
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "electron-builder": "^26.0.12",
    "electron": "^37.2.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "electron-packager": "^17.1.2"
  }
}
